# start lxc-android-config after mount-android finished
start on (cgmanager-ready
   and started cgroup-lite
   and mounted-android)

pre-start script
    umount -l /sys/fs/cgroup/schedtune || true

    while ! mountpoint -q -- /vendor
    do
        sleep 1
    done

post-start script
    # Wait for hwcomposer to start
    while [ "$(getprop init.svc.vendor.hwcomposer-2-4)" != "running" ]; do sleep 0.5; done
end script
